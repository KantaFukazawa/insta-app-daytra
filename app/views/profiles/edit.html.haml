.container
  = form_with(model: @profile, url: profile_path, class:'profile_form'  method: 'put', local: true) do |f|
    .field.form_item
      = f.label :account, class:'form_label'
      %br/
      = f.text_field :username, autofocus: true, autocomplete: "name", value: @profile, class: 'form_field';
    .field.form_item
      = f.label :avatar, 'avatar', class:'form_label'
      %br/
      = f.file_field :avatar
    .btn_field
      .actions
        = f.submit "保存", class: 'submit_btn save_btn'